<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="0.01dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:id="@+id/img_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/guest_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/user"
                    />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/guest_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/riview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/user_name"
                    android:layout_alignStart="@+id/user_name"
                    android:layout_below="@+id/user_name"
                    android:layout_marginTop="22dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/riview_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/guest_image"
                    android:layout_alignStart="@+id/guest_image"
                    android:layout_below="@+id/guest_image"
                    android:text="ygfddhdgkffhjjhkgjgkjghkjkhgjkgljkhgkhjkgjkkj" />


            </RelativeLayout>

            <!--<TextView-->
                <!--android:id="@+id/tv_species"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_gravity="bottom"-->
                <!--android:background="#ff444444"-->
                <!--android:gravity="center_vertical"-->
                <!--android:paddingLeft="5dp"-->
                <!--android:paddingRight="2dp"-->
                <!--android:text="Test"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="20dp" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>