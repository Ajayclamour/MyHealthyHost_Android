<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"

    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="0dp"
    android:paddingTop="20dp"

    android:background="#ededed"



    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="360dp">

            <RelativeLayout
                android:id="@+id/relativ1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                >

                <ImageView
                    android:id="@+id/event_image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/image_background"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativ2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/relativ1">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_guest"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/image_guest"
                    android:layout_toRightOf="@+id/image_guest"
                    android:text="Indian Food Evening"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/relativ2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorRed" />

            <TextView
                android:id="@+id/event_location"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view"
                android:layout_marginTop="305dp"
                android:layout_alignStart="@+id/view"
                android:layout_marginBottom="13dp"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/lato_regular"
                android:textSize="15sp" />

            <!--<ImageView-->
                <!--android:id="@+id/imageView4"-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="15dp"-->
               <!--android:layout_marginTop="307dp"-->
                <!--android:layout_marginLeft="26dp"-->
                <!--android:layout_marginStart="26dp"-->
                <!--android:layout_toEndOf="@+id/event_location"-->
                <!--android:layout_toRightOf="@+id/event_location"-->
                <!--android:background="@drawable/rating" />-->

            <!--<TextView-->
                <!--android:id="@+id/rating_count"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->


                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_toEndOf="@+id/imageView4"-->
                <!--android:layout_toRightOf="@+id/imageView4"-->
                <!--android:text="5.0"-->
                <!--android:textColor="@color/black"-->
                <!--android:layout_marginTop="305dp"-->
                <!--android:textSize="15sp" />-->

            <TextView
                android:id="@+id/event_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/event_location"
                android:layout_alignBottom="@+id/event_location"
                android:layout_alignEnd="@+id/view"
                android:layout_alignRight="@+id/view"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:fontFamily="@font/lato_bold"
                android:text="$12"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/event_price"
                android:layout_alignRight="@+id/event_price"
                android:layout_below="@+id/event_price"
                android:text="view details"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="#6bb203" />

        </RelativeLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>