<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ededed"
    tools:context="net.clamour.foodevent.booking.GuestBooking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorRed"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2.0"
        style="?attr/buttonBarStyle">

        <Button
            android:id="@+id/request_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:background="@color/colorRed"
            android:textColor="#fff"
            style="?attr/buttonBarButtonStyle"
            android:text="Proceed to Payment"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"


       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:text="Booking Summary" />
    </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/layout_border"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/rel1"
                    >


                    <TextView
                        android:id="@+id/event_name_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="22dp"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="19dp"
                        android:layout_toEndOf="@+id/textView66"
                        android:layout_toRightOf="@+id/textView66"
                        android:fontFamily="@font/lato_bold"
                        android:maxLines="2"
                        android:text="Parsian Evening With Gourmetsarsian"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/event_name_booking"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_regular"
                        android:text="Service Name" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView22"
                        android:layout_alignStart="@+id/textView22"
                        android:layout_below="@+id/event_name_booking"
                        android:fontFamily="@font/lato_regular"
                        android:text="No of Guest"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/numberofguest_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/event_name_booking"
                        android:layout_alignStart="@+id/event_name_booking"
                        android:layout_alignTop="@+id/textView23"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_bold"
                        android:text="10" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView23"
                        android:layout_alignStart="@+id/textView23"
                        android:layout_below="@+id/textView23"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Service Date"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/eventdate_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView5"
                        android:layout_alignLeft="@+id/numberofguest_booking"
                        android:layout_alignStart="@+id/numberofguest_booking"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_bold"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView66"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView5"
                        android:layout_alignStart="@+id/textView5"
                        android:layout_below="@+id/eventdate_booking"
                        android:layout_marginTop="28dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/black"
                        android:text="Booking Time" />

                    <TextView
                        android:id="@+id/booking_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/eventdate_booking"
                        android:layout_alignStart="@+id/eventdate_booking"
                        android:layout_alignTop="@+id/textView66"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"
                        android:text="" />
                </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginTop="40dp"
        android:layout_below="@+id/rel2"
        >




        <TextView
            android:id="@+id/textView_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/lato_bold"
            android:text="Total Payable Amount" />




    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_border"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/rel3"
        >


        <TextView
            android:id="@+id/TotalpaidAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_fare"
            android:layout_alignBottom="@+id/textView_fare"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="$100" />

        <TextView
            android:id="@+id/textView_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lato_regular"
            android:text="Total"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black" />




    </RelativeLayout>


            </RelativeLayout>




