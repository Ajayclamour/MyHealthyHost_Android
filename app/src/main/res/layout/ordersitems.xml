<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="0dp"
    android:layout_marginBottom="10dp"
    android:paddingStart="20dp"
    android:background="#ededed"
    android:paddingTop="20dp"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <TextView
            android:id="@+id/order_no_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_regular"
            android:text="Order No:"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/retailor_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_no_text"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/lato_regular"
            android:paddingTop="10dp"
            android:text="Date:"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/retailor_name_text"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/lato_regular"
            android:paddingTop="10dp"
            android:text="Name:"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_text"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/lato_regular"
            android:paddingTop="10dp"
            android:text="Service:"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/remark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount_text"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/lato_regular"
            android:paddingTop="10dp"
            android:text="Time:"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/retailor_name_text"
            android:layout_marginLeft="200dp"
            android:fontFamily="@font/lato_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/order_text"
            android:layout_alignLeft="@+id/order_no"
            android:layout_alignStart="@+id/order_no"
            android:fontFamily="@font/lato_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/name_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/amount_text"
            android:layout_alignLeft="@+id/date_order"
            android:layout_alignStart="@+id/date_order"
            android:fontFamily="@font/lato_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/service_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/amount_text"
            android:layout_alignBottom="@+id/amount_text"
            android:layout_alignLeft="@+id/name_order"
            android:layout_alignStart="@+id/name_order"
            android:fontFamily="@font/lato_bold"
            android:text=""
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/remark_text"
            android:layout_alignBottom="@+id/remark_text"
            android:layout_alignLeft="@+id/service_order"
            android:layout_alignStart="@+id/service_order"
            android:fontFamily="@font/lato_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/remark_text"
            android:layout_alignStart="@+id/remark_text"
            android:layout_below="@+id/remark_text"
            android:fontFamily="@font/lato_regular"
            android:paddingTop="10dp"
            android:text="Price:"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/price_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView26"
            android:layout_alignBottom="@+id/textView26"
            android:layout_alignLeft="@+id/time_order"
            android:layout_alignStart="@+id/time_order"
            android:fontFamily="@font/lato_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>