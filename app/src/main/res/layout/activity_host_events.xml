<?xml version="1.0" encoding="utf-8"?>



<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:id="@+id/drawer">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="net.clamour.foodevent.GuestHomeScreen.GuestHomeScreen">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appBarLayout">

            <include layout="@layout/app_bar_layout"
                android:id="@+id/main_page_toolbar" />



        </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2.0"
        style="?attr/buttonBarStyle">


        <Button
            android:id="@+id/logout_attendance"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:background="@color/colorRed"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SUBMIT EVENTS"/>
    </LinearLayout>



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/buttons"
        android:layout_marginTop="57dp">
        <!--Scrollable content here-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="1800dp">


                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="39dp"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Enter Description:"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


                <Spinner
                    android:id="@+id/experience_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView42"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/experience_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:background="@color/dark_grey"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/linear1"
                    android:layout_alignStart="@+id/linear1"
                    android:layout_below="@+id/textView42"
                    android:layout_marginTop="22dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Experience" />


                <Spinner
                    android:id="@+id/cusine_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linear1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/cusine_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:background="@color/dark_grey"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/cusine_spinner"
                    android:layout_alignStart="@+id/cusine_spinner"
                    android:layout_below="@+id/linear1"
                    android:layout_marginTop="25dp"
                    android:text="Cuisine" />

                <Spinner
                    android:id="@+id/minguest_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linear2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/minguest_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:background="@color/dark_grey"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/minguest_spinner"
                    android:layout_alignStart="@+id/minguest_spinner"
                    android:layout_below="@+id/linear2"
                    android:layout_marginTop="26dp"
                    android:text="Min Guests" />

                <Spinner
                    android:id="@+id/maxguest_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linear3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/maxguest_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:background="@color/dark_grey"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView47"
                    android:layout_alignRight="@+id/textView47"
                    android:layout_below="@+id/linear3"
                    android:layout_marginTop="22dp"
                    android:text="Max Guests" />

                <TextView
                    android:id="@+id/title_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/linear4"
                    android:layout_alignStart="@+id/linear4"
                    android:layout_below="@+id/linear4"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Title" />

                <EditText
                    android:id="@+id/title_edit_event"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/textView48"
                    android:layout_alignStart="@+id/textView48"
                    android:layout_below="@+id/title_event"
                    android:layout_marginTop="14dp"

                    android:fontFamily="@font/lato_regular" />

                <TextView
                    android:id="@+id/priceperguest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="Price/Guest"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/title_edit_event"/>



                <LinearLayout
                    android:id="@+id/linear6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/priceperguest"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/dark_grey"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/title_edit_event"
                    android:layout_alignStart="@+id/title_edit_event"
                    android:layout_below="@+id/priceperguest"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:text="No of Guest" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignEnd="@+id/textView42"
                    android:layout_alignRight="@+id/textView42"
                    android:layout_below="@+id/priceperguest"
                    app:srcCompat="@drawable/add_icon" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/imageView5"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView5"
                    app:srcCompat="@drawable/minus_icon" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/title_edit_event"
                    android:layout_alignStart="@+id/title_edit_event"
                    android:layout_below="@+id/linear6"
                    android:layout_marginTop="27dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Place/Amenties:" />

                 <TextView
                     android:id="@+id/event_date"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Event Date"
                     android:layout_marginTop="20dp"
                     android:layout_marginLeft="20dp"
                     android:layout_below="@+id/textView50"/>

                <EditText
                    android:id="@+id/eventdate_edit_event"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/textView48"
                    android:layout_alignStart="@+id/textView48"
                    android:layout_below="@+id/event_date"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/lato_regular" />



                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/eventdate_edit_event"
                    />

                <Spinner
                    android:id="@+id/starttime_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/start_time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linear7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/starttime_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dark_grey"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/linear7"
                    />

                <Spinner
                    android:id="@+id/endtime_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/end_time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linear8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/endtime_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dark_grey"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_below="@+id/linear8"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="20dp"
                    android:text="Hosting Address" />


                <TextView
                    android:id="@+id/full_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Address"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/textView52"/>

                <EditText
                    android:id="@+id/full_address_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/textView48"
                    android:layout_alignStart="@+id/textView48"
                    android:layout_below="@+id/full_address"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_regular" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/full_address_edit"/>

                <EditText
                    android:id="@+id/number_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/textView48"
                    android:layout_alignStart="@+id/textView48"
                    android:layout_below="@+id/number"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_regular" />



                <TextView
                    android:id="@+id/street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/number_edit"/>

                <EditText
                    android:id="@+id/street_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/textView48"
                    android:layout_alignStart="@+id/textView48"
                    android:layout_below="@+id/street"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_regular" />

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/street_edit"
                    />

                <Spinner
                    android:id="@+id/country_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/country"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linear9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/country_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dark_grey"
                    android:orientation="horizontal"></LinearLayout>


                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/linear9"
                    />

                <Spinner
                    android:id="@+id/state_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/state"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linear10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/state_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dark_grey"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/linear4"
                    android:layout_alignStart="@+id/linear4"
                    android:layout_below="@+id/linear10"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="City" />

                <EditText
                    android:id="@+id/city_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/textView48"
                    android:layout_alignStart="@+id/textView48"
                    android:layout_below="@+id/city"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_regular" />

                <TextView
                    android:id="@+id/zip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/linear4"
                    android:layout_alignStart="@+id/linear4"
                    android:layout_below="@+id/city_edit"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Zipcode" />

                <EditText
                    android:id="@+id/zip_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/textView48"
                    android:layout_alignStart="@+id/textView48"
                    android:layout_below="@+id/zip"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_regular" />








            </RelativeLayout>






        </LinearLayout>
    </ScrollView>

</RelativeLayout>
    <ListView

        android:id="@+id/left_drawer"
        android:layout_height="match_parent"
        android:layout_width="240dp"
        android:divider="@android:color/transparent"
        android:layout_gravity="start"
        android:background="#fff"
        android:choiceMode="singleChoice"

        />
</android.support.v4.widget.DrawerLayout>