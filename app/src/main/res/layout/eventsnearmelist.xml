<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="0dp"
    android:paddingTop="20dp"
    android:background="#ededed"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <RelativeLayout
                android:id="@+id/relativ1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

                <ImageView
                    android:id="@+id/event_image"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativ2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/relativ1">


                <ImageView
                    android:id="@+id/image_guest"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    card_view:srcCompat="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/image_guest"
                    android:layout_toRightOf="@+id/image_guest"
                    android:text="Indian Food Evening"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/relativ2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorRed" />

            <TextView
                android:id="@+id/event_hostname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view"
                android:layout_below="@+id/view"
                android:layout_marginTop="17dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/event_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/event_hostname"
                android:layout_alignEnd="@+id/view"
                android:layout_alignRight="@+id/view"
                android:fontFamily="@font/lato_bold"
                android:layout_marginEnd="11dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginRight="11dp"
                android:text="TextView" />




        </RelativeLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>