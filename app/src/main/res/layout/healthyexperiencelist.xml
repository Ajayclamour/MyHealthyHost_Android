<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"


    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="0dp"
    android:paddingTop="20dp"
    android:background="#ededed">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="390dp">

            <RelativeLayout
                android:id="@+id/relativ1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                >

                <ImageView
                    android:id="@+id/event_image_history"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativ2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/relativ1">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/host_image_history"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                     />

                <TextView
                    android:id="@+id/event_title_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/host_image_history"
                    android:layout_toRightOf="@+id/host_image_history"
                    android:text="Indian Food Evening"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/relativ2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorRed" />

            <TextView
                android:id="@+id/event_hostname_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view"
                android:layout_below="@+id/view"
                android:layout_marginTop="17dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/event_price_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/event_hostname_history"
                android:layout_alignEnd="@+id/view"
                android:layout_alignRight="@+id/view"
                android:fontFamily="@font/lato_bold"
                android:layout_marginEnd="11dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginRight="11dp"
                android:text="TextView" />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_below="@+id/event_price_history">


    <Button
        android:id="@+id/add_riview_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
        android:background="@color/colorRed"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="Add Review"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
      </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>