            <RelativeLayout
                android:id="@+id/relativ2"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_below="@+id/relativ1">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_guest"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/user"
                     />

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/image_guest"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/image_guest"
                    android:layout_toRightOf="@+id/image_guest"
                    android:text="Indian Food Evening"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/host_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:layout_alignLeft="@+id/event_title"
                    android:layout_alignStart="@+id/event_title"
                    android:layout_below="@+id/event_title"
                    android:layout_marginTop="10dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:layout_alignLeft="@+id/host_name"
                    android:layout_alignStart="@+id/host_name"
                    android:layout_below="@+id/host_name"

                    android:text="TextView" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:layout_alignLeft="@+id/service_name"
                    android:layout_alignStart="@+id/service_name"
                    android:layout_below="@+id/service_name"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginTop="10dp"
                    android:layout_alignLeft="@+id/price"
                    android:layout_alignStart="@+id/price"
                    android:layout_below="@+id/price"
                    android:text="TextView" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/imageView8" />

                <ImageView
                    android:id="@+id/del_wishlisht"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView8"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/imageView8"
                    android:layout_marginTop="19dp"
                    card_view:srcCompat="@drawable/ic_delete_black_24dp" />

                <!--<ImageView-->
